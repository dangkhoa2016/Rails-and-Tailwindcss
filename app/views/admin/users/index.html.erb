<h1>Users</h1>

<button class='btn-primary my-button'>Primary Button</button>

<%= search_form_for @q, url: admin_users_path, method: :get, html: { class: 'mb-4' } do |f| %>
  <div class="flex space-x-4">
    <div class="w-full">
      <%= f.label :first_name_cont, "Search by First Name", class: 'block' %>
      <%= f.text_field :first_name_cont, class: 'w-full p-2 border border-gray-300 rounded-md' %>
    </div>

    <div class="w-full">
      <%= f.label :last_name_cont, "Search by Last Name", class: 'block' %>
      <%= f.text_field :last_name_cont, class: 'w-full p-2 border border-gray-300 rounded-md' %>
    </div>

    <div class="w-full">
      <%= f.label :email_cont, "Search by Email", class: 'block' %>
      <%= f.text_field :email_cont, class: 'w-full p-2 border border-gray-300 rounded-md' %>
    </div>

    <div class="flex items-end">
      <%= f.submit "Search", class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600" %>
    </div>
  </div>
<% end %>

<%= table_for User, @users, options: {
  attributes: %w(first_name:sortable last_name:sortable email:sortable birth_date my_helper_method:sortable),
} %>

<%== pagy_nav(@pagy) %>
