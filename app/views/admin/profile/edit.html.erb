<div class="max-w-screen-xl mx-auto md:bg-red-200 shadow sm:rounded-lg flex justify-center flex-1">
  <div class="rounded-e-lg rounded-s-lg md:rounded-e-none md:w-1/2 w-full xl:w-5/12 dark:bg-gray-600 bg-white p-4 md:p-6 sm:p-12">
    <div class="mt-3 flex flex-col items-center">
      <h1 class="text-2xl xl:text-3xl font-extrabold">
        Edit your profile
      </h1>
      <div class="w-full flex-1 mt-8">
        <%= render "admin/profile/form" %>

        <div class="mt-6 text-xs text-gray-600 text-center">
          <div class="mb-4">
            Unhappy? <%= button_to "Cancel my account", profile_path,
              data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
              method: :delete, class: "text-red-600 hover:text-red-800" %>
          </div>

          <div class='flex justify-between'>
            <%= link_to 'Change Password', profile_password_path, class: 'text-gray-900 hover:text-blue-700 dark:text-white dark:hover:text-blue-500 dark:hover:text-blue-500 hover:underline', data: { turbo_frame: '_top' } %>
            <%= link_to 'Update Avatar', avatar_admin_profile_index_path, class: 'text-gray-900 hover:text-blue-700 dark:text-white dark:hover:text-blue-500 dark:hover:text-blue-500 hover:underline', data: { turbo_frame: '_top' } %>
          </div>

          <%= link_to 'Back', profile_path, class: 'dark:text-white dark:hover:text-blue-500 dark:hover:text-blue-500 hover:underline text-indigo-600 hover:text-indigo-800', data: { turbo_frame: '_top' } %>
        </div>
      </div>
    </div>
  </div>
  <div class="flex-1 text-center hidden md:flex">
    <div class="m-12 xl:m-16 w-full bg-contain bg-center bg-no-repeat" style="background-image: url('<%= asset_path('update-profile.svg') %>');">
    </div>
  </div>
</div>
