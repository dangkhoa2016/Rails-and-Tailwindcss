<div class="w-4/5 mx-auto p-6 bg-white shadow-md rounded-lg">
  <h2 class="text-2xl font-bold mb-3">Your profile</h2>
  <p class="mb-6">Your profile information here.</p>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="flex flex-col space-y-2">
      <label for="name" class="font-semibold">Name</label>
      <span><%= current_user.full_name %></span>
    </div>

    <div class="flex flex-col space-y-2">
      <label for="email" class="font-semibold">Email</label>
      <span><%= current_user.email %></span>
    </div>

    <div class="flex flex-col space-y-2">
      <label for="phone_number" class="font-semibold">Phone number</label>
      <span><%= current_user.phone_number %></span>
    </div>

    <div class="flex flex-col space-y-2">
      <label for="created_at" class="font-semibold">Created at</label>
      <span><%= current_user.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
    </div>

    <div class="flex flex-col space-y-2">
      <label for="updated_at" class="font-semibold">Updated at</label>
      <span><%= current_user.updated_at.strftime("%B %d, %Y at %I:%M %p") %></span>
    </div>
  </div>

  <div class="mt-6 space-y-4">
    <div class="flex flex-col space-y-2">
      <%= button_to "Sign out",
        destroy_user_session_path, data: { turbo_method: :delete },
        method: :delete,
        class: "inline-flex items-center justify-center w-full px-4 py-2 text-sm font-medium " \
          "text-gray-900 bg-orange-200 border border-orange-200 rounded-lg hover:bg-orange-300 hover:text-primary-700 focus:outline-none " \
          "focus:ring-4 focus:ring-orange-200" %>
    </div>

    <div class="flex space-x-4">
      <a href="<%= profile_edit_path %>" class="text-blue-600 hover:underline">Edit Profile</a>
      <a href="<%= profile_password_path %>" class="text-blue-600 hover:underline">Change Password</a>
    </div>
  </div>
</div>
