<div class="min-h-screen bg-gray-100 text-gray-900 flex justify-center">
  <div class="max-w-screen-xl m-0 bg-white sm:m-10 md:bg-lime-100 shadow sm:rounded-lg flex justify-center flex-1">
    <div class="rounded-s-lg md:w-1/2 bg-white xl:w-5/12 w-4/5 p-4 md:p-6 sm:p-12">
      <div>
        <%= image_tag "logo.svg", class: "w-32 mx-auto" %>
      </div>
      <div class="mt-12 flex flex-col items-center">
        <h1 class="text-2xl xl:text-3xl font-extrabold">
          Change your avatar
        </h1>
        <div class="w-full flex-1 mt-8">
          <%= render 'profile/avatar_form' %>
        </div>
      </div>
    </div>
    <div class="flex-1 text-center hidden md:flex">
      <div class="m-12 xl:m-16 w-full bg-contain bg-center bg-no-repeat" style="background-image: url('<%= asset_path('profile-avatar.svg') %>');">
      </div>
    </div>
  </div>
</div>
